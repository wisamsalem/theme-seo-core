{
  "name": "your-vendor/theme-seo-core",
  "description": "Modular SEO toolkit with a theme optimization core module.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Your Name",
      "homepage": "https://example.com"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "autoload": {
    "psr-4": {
      "ThemeSeoCore\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ThemeSeoCore\\Tests\\": "tests/unit/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6 || ^10.5",
    "squizlabs/php_codesniffer": "^3.10",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "scripts": {
    "post-autoload-dump": [
      "@composer dump-autoload -o"
    ],
    "cs": "phpcs -p --standard=phpcs.xml.dist",
    "cs:fix": "phpcbf -p --standard=phpcs.xml.dist",
    "test": "phpunit -c phpunit.xml.dist"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "installer-name": "theme-seo-core"
  }
}

