# EditorConfig helps developers define and maintain consistent coding styles.
# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# WordPress PHP convention: tabs, width 4
[*.php]
indent_style = tab
indent_size = 4

# JS / TS / JSX / TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON & JSONC
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# CSS / SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML (phpunit.xml.dist, phpcs.xml.dist, block.json is JSON above)
[*.xml]
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (theyâ€™re meaningful for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile requires tabs
[Makefile]
indent_style = tab
indent_size = 4

# EditorConfig itself
[.editorconfig]
indent_style = space
indent_size = 2

